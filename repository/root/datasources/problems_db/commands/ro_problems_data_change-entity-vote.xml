<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE command SYSTEM "../../../../dtds/script-dao-commands.dtd">
<command name="ro.problems.data.change-entity-vote" type="SQL.UPDATE">
         <parameters>
                     <parameter name="entityId" />
                     <parameter name="userId" />
                     <parameter name="vote" />
               </parameters>
      <script>
      update entities_votes 
set vote='$vote'
where entity_id=$entityId
and user_id=$userId
   </script>
</command>